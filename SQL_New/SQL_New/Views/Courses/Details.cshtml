@using SQL_New.Models
@model Course

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.Name)
        </dd>

    </dl>
    <div class="row">
        <div class="col-md-6">
            @if (Model.Students != null && Model.Students.Count > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td><b>Students in this Course</b></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Student student in Model.Students)
                {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => student.Name)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="col-md-6">
            @if (Model.Assignments != null && Model.Assignments.Count > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td><b>Assignments in this Course</b></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Assignment assignment in Model.Assignments)
                {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => assignment.Name)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
   

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
